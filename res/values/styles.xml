<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <!-- Customize your theme here. -->
        <!--
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="MyEditTextStyle">
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:background">@drawable/roundedit</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_margin">@dimen/my_margin</item>
        <item name="android:padding">@dimen/my_margin</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_margin">@dimen/my_margin</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:background">@color/darkGrey</item>
    </style>

    <style name="MyTextViewStyleNoBackground">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_margin">@dimen/my_margin</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
            <item name="android:background">@drawable/roundbutton</item>
            <item name="android:textSize">12sp</item>
            <item name="android:textColor">@color/textWhite</item>
            <item name="android:layout_width">100dp</item>
            <item name="android:layout_height">50dp</item>
            <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>


    <style name="PopupMenuStyle" parent="android:Widget.Holo.Light.PopupMenu">
        <item name="android:popupBackground">@color/popupText</item>
    </style>
</resources>
